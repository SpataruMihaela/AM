{
  "compilerOptions": {
    "target": "ESNext",               
    "module": "ESNext",              
    "moduleResolution": "node",       
    "esModuleInterop": true,          
    "skipLibCheck": true,             
    "strict": true,                   
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",               
    "rootDir": ".",                   
    "resolveJsonModule": true         
  },
  "include": [
    "**/*.ts",                        
    "playwright.config.ts"            
  ]
}
